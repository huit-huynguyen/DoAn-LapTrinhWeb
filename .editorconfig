[*]

charset = utf-8
end_of_line = lf

insert_final_newline = true
trim_trailing_whitespace = true

#
# General files
#

[*.md]
indent_style = space
indent_size = 2

#
# Profect files
#

[*.cs]
indent_style = space
indent_size = 4

[*.{html,cshtml}]
indent_style = space
indent_size = 2

[*.config]
indent_style = space
indent_size = 2

[*.csproj]
indent_style = space
indent_size = 2
