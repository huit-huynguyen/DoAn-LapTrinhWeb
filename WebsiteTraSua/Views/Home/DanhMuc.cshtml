@using WebsiteTraSua.Models

@{
    Layout = "~/Views/Home/_Layout.cshtml";
    ViewBag.Title = "Menu";
}

<!-- Menu Section -->
<section class="py-5">
    <div class="container">
        <!-- Search & Filter Controls -->
        <div class="row mb-4">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Tìm kiếm đồ uống...">
            </div>
            <div class="col-md-6">
                <select class="form-select">
                    <option value="">Tất cả danh mục</option>
                    <option value="trasua">Trà sữa</option>
                    <option value="tra">Trà</option>
                    <option value="cafe">Cà phê</option>
                    <option value="daxay">Đá xay</option>
                </select>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="row g-4">
            @foreach (var drink in new ThucUong[] {
                // Trà sữa
                new ThucUong {
                    Ten = "Trà Sữa Truyền Thống",
                    Gia = 45000M,
                    HinhAnh = "tra-sua-truyen-thong.jpg",
                    MoTa = "Trà đen đặc trưng kết hợp với sữa tươi và trân châu mật ong",
                },
                new ThucUong {
                    Ten = "Trà Sữa Matcha",
                    Gia = 55000M,
                    HinhAnh = "tra-sua-matcha.jpg",
                    MoTa = "Matcha Nhật Bản cao cấp với sữa tươi và trân châu đường nâu",
                },
                new ThucUong {
                    Ten = "Trà Sữa Khoai Môn",
                    Gia = 55000M,
                    HinhAnh = "tra-sua-khoai-mon.jpg",
                    MoTa = "Hỗn hợp khoai môn mịn màng với sữa dừa và trân châu gạo tím",
                },
                new ThucUong {
                    Ten = "Trà Sữa Socola",
                    Gia = 50000M,
                    HinhAnh = "tra-sua-socola.jpg",
                    MoTa = "Socola Bỉ thượng hạng kết hợp với sữa tươi và trân châu socola",
                },
                new ThucUong {
                    Ten = "Trà Sữa Dâu",
                    Gia = 50000M,
                    HinhAnh = "tra-sua-dau.jpg",
                    MoTa = "Dâu tây tươi xay với sữa tươi và trân châu dâu",
                },

                // Hồng trà
                new ThucUong {
                    Ten = "Hồng Trà Đen",
                    Gia = 35000M,
                    HinhAnh = "hong-tra-den.jpg",
                    MoTa = "Hồng trà đen Ceylon thượng hạng kết hợp với mật ong",
                },
                new ThucUong {
                    Ten = "Hồng Trà Oolong",
                    Gia = 40000M,
                    HinhAnh = "hong-tra-oolong.jpg",
                    MoTa = "Hồng trà Oolong Đài Loan với tinh thể mật ong",
                },
                new ThucUong {
                    Ten = "Hồng Trà Đào",
                    Gia = 45000M,
                    HinhAnh = "hong-tra-dao.jpg",
                    MoTa = "Hồng trà đào tươi với lát đào và trân châu trắng",
                },
                new ThucUong {
                    Ten = "Hồng Trà Vải",
                    Gia = 45000M,
                    HinhAnh = "hong-tra-vai.jpg",
                    MoTa = "Hồng trà vải tươi với vải nguyên trái và thạch",
                },
                new ThucUong {
                    Ten = "Hồng Trà Chanh",
                    Gia = 35000M,
                    HinhAnh = "hong-tra-chanh.jpg",
                    MoTa = "Hồng trà tươi với chanh và mật ong",
