                    Ten = "Socola Đá Xay",
                    Gia = 60000M,
                    HinhAnh = "da-xay-socola.jpg",
                    MoTa = "Socola Bỉ đá xay với kem tươi phủ",
                },
                new ThucUong {
                    Ten = "Cookie Đá Xay",
                    Gia = 65000M,
                    HinhAnh = "da-xay-cookie.jpg",
                    MoTa = "Bánh cookies nghiền đá xay với kem tươi phủ",
                },
                new ThucUong {
                    Ten = "Caramel Đá Xay",
                    Gia = 65000M,
                    HinhAnh = "da-xay-caramel.jpg",
                    MoTa = "Caramel thơm béo đá xay với kem tươi phủ",
                },
                new ThucUong {
                    Ten = "Dâu Đá Xay",
                    Gia = 60000M,
                    HinhAnh = "da-xay-dau.jpg",
                    MoTa = "Dâu tây tươi đá xay với kem tươi phủ",
                }
            })
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm rounded-4 border-0">
                        <img src="~/Content/images/@drink.HinhAnh" class="card-img-top" alt="@drink.Ten">
                        <div class="card-body">
                            <h3 class="h5 fw-bold" style="color: var(--primary)">@drink.Ten</h3>
                            <p class="text-secondary">@drink.MoTa</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0" style="color: var(--secondary)">
                                    @drink.Gia.ToString("#,###")₫
                                </span>
                                <button class="btn btn-primary rounded-pill px-4">Thêm vào giỏ</button>
                            </div>
