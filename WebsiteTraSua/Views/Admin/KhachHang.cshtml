@model IEnumerable<WebsiteTraSua.Models.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Admin/_Layout.cshtml";
}
<div class="container mt-4">
    <h2>Danh Sách Khách Hàng</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Mã KH</th>
                    <th>Họ Tên</th>
                    <th>Số Điện Thoại</th>
                    <th>Email</th>
                    <th>Địa Chỉ</th>
                    <th>Ngày Sinh</th>
                    <th>Điểm Tích Lũy</th>
                    <th>Cấp Bậc</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kh in Model)
                {
                    <tr>
                        <td>@kh.MaKH</td>
                        <td>@kh.HoTen</td>
                        <td>@kh.SoDienThoai</td>
                        <td>@kh.Email</td>
                        <td>@kh.DiaChi</td>
                        <td>@kh.NgaySinh?.ToString("dd/MM/yyyy")</td>
                        <td>@kh.DiemTichLuy</td>
                        <td>@kh.CapBac</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
