@model IEnumerable<WebsiteTraSua.Models.Topping>

@{
    ViewBag.Title = "Topping";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h2 class="text-2xl font-bold">Topping</h2>

<div class="container mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
        <a href="@Url.Action("ThemTopping") class="bg-blue-500 text-black px-4 py-2 rounded hover:bg-blue-600">
            Thêm topping mới
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var topping in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <div class="p-4">
                    <h2 class="text-lg font-semibold mb-2">@topping.TenTopping</h2>
                    <p class="text-gray-600 mb-2"> Mã: @topping.MaTopping</p>
                    <div class="mt-2 flex justify-between items-center">
                        <span class="text-lg font-bold text-green-500">@topping.Gia.ToString("N0")đ</span>
                        <a href="@Url.Action("SuaTopping", new { id = topping.MaTopping })" class="bg-blue-500 text-black px-3 py-1 rounded hover:bg-blue-600">
                            Chỉnh sửa
                        </a>
                        <a href="@Url.Action("XoaTopping", new { id = topping.MaTopping })" class="bg-blue-500 text-black px-3 py-1 rounded hover:bg-blue-600">
                            Xóa
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
