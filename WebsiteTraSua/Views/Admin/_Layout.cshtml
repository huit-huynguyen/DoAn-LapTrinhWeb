<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nhóm 11</title>

    <!-- Stylesheets -->
    <link href="~/Vendors/bootstrap-5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Vendors/bootstrap-icons-1.11.3/bootstrap-icons.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
</head>
<body class="admin-layout">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand fs-3" href="@Url.Action("TrangChu", "Admin")">
                <span class="d-block fw-bold" style="color: var(--primary)">Quản trị</span>
                <span class="fs-6 text-secondary">Trà sữa Nhóm 11</span>
            </a>

            <!-- Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navContent">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Dashboard", "TrangChu", "Admin", null, new { @class = "nav-link text-center fw-medium" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sản phẩm", "SanPham", "Admin", null, new { @class = "nav-link text-center fw-medium" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Topping", "Topping", "Admin", null, new { @class = "nav-link text-center fw-medium" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Khách Hàng", "KhachHang", "Admin", null, new { @class = "nav-link text-center fw-medium" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Đơn hàng", "DonHang", "Admin", null, new { @class = "nav-link text-center fw-medium" })
                    </li>
                </ul>

                <!-- Admin Profile -->
                <div class="dropdown">
                    <button class="btn btn-link p-0" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle fs-4"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-4">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/Vendors/bootstrap-5.3.3/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
